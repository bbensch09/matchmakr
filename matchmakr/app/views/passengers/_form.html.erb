<%= form_for @passenger, multipart:true do |f| %>

  <% if @passenger.errors.any? %>
    <div id="error_explanation">
      <h2>
        <span class="errors">
          <%= pluralize(@passenger.errors.count, "error") %>
        </span> prohibited this article from being saved:
      </h2>
      <ul>
        <% @passenger.errors.full_messages.each do |msg| %>
          <li class="errors"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<section class="new-article-form">
  <div>
    <%= f.submit 'Submit to Sign up', :class=>"button" %>
  </div>
  <p>
    <%= f.label :first_name, "First Name", :class=>"edit-label" %><br>
    <%= f.text_area :first_name, size:"50x2" %> <br>
  </p>

  <p>
    <%= f.label :last_name, "Last Name", :class=>"edit-label"  %><br>
    <%= f.text_area :last_name, size:"50x2" %>

   <p>
    <%= f.label :age, "Age", :class=>"edit-label"  %><br>
    <%= f.text_area :age, size:"50x2" %>
  </p>
  <p>
    <%= f.label :gender, "Gender", :class=>"edit-label"  %><br>
    <%= f.select :gender, options_for_select([["Male",1],["Female",2]]), size:"50x2" %>
  </p>
  <p>
    <%= f.label :interests, "Interests", :class=>"edit-label"  %><br>
    <%= f.text_area :interests, size:"200x6" %>
  </p>

  <div>
    <%= f.submit 'Submit to Sign up', :class=>"button" %>
  </div>
</section>
<% end %>