<%= form_for @driver, multipart:true do |f| %>

  <% if @driver.errors.any? %>
    <div id="error_explanation">
      <h2>
        <span class="errors">
          <%= pluralize(@driver.errors.count, "error") %>
        </span> prohibited this article from being saved:
      </h2>
      <ul>
        <% @driver.errors.full_messages.each do |msg| %>
          <li class="errors"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<section class="new-article-form">
  <div>
    <%= f.submit 'Submit to Sign up', :class=>"button" %>
  </div>
  <p>
    <%= f.label :first_name, "First Name", :class=>"edit-label" %><br>
    <%= f.text_field :first_name, size:"50x2" %> <br>
  </p>

  <p>
    <%= f.label :last_name, "Last Name", :class=>"edit-label"  %><br>
    <%= f.text_field :last_name, size:"50x2" %>

   <p>
    <%= f.label :vehicle_id, "Vehicle ID:", :class=>"edit-label"  %><br>
    <%= f.text_field :vehicle_id, size:"50x2" %>
  </p>

  <div>
    <%= f.submit 'Submit to Sign up', :class=>"button" %>
  </div>
</section>
<% end %>